<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AIIMSHealthApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:background">@color/background</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="CardStyle">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:backgroundTint">@color/card_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="CardBackgroundStyle">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:backgroundTint">#96c6d1</item>
        <item name="android:alpha">0.16</item>


        <!-- Elevation to give a shadow effect -->
<!--        <item name="android:elevation">4dp</item>-->

        <!-- Layout margin for spacing around the view -->
<!--        <item name="android:layout_margin">8dp</item>-->
    </style>
</resources>
